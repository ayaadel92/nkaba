<p id="notice"><%= notice %></p>

<h1>Listing Transfers</h1>

<table>
  <thead>
    <tr>
      <th>Data of request</th>
      <th>Percentage shareholding</th>
      <th>Status</th>
      <th>Total cost</th>
      <th>Medicaldiagnosis</th>
      <th>Membersh number</th>
      <th>Doctor</th>
      <th>Hospital</th>
      <th>Lab</th>
      <th>Type</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @transfers.each do |transfer| %>
      <tr>
        <td><%= transfer.data_of_request %></td>
        <td><%= transfer.percentage_shareholding %></td>
        <td><%= transfer.status %></td>
        <td><%= transfer.total_cost %></td>
        <td><%= transfer.medicaldiagnosis %></td>
        <td><%= transfer.membersh_number %></td>
        <td><%= transfer.doctor %></td>
        <td><%= transfer.hospital %></td>
        <td><%= transfer.lab %></td>
        <td><%= transfer.type %></td>
        <td><%= link_to 'Show', transfer %></td>
        <td><%= link_to 'Edit', edit_transfer_path(transfer) %></td>
        <td><%= link_to 'Destroy', transfer, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

